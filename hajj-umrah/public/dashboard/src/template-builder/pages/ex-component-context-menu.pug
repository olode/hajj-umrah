extends template

block pageVars
	- var pageTitle    = "Context Menu"
	- var pageSubTitle = "Bootstrap Context Menu"
	- var description  = "Context menu plugin for Twitter's Bootstrap framework"
	- var activeMenu   = "ex-component-context-menu"

block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Extra Components"}, {name:"Context Menu"}])



//- Include page content in page block
append content
	include ../contents/ex-component-context-menu.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/ui/prism.min.css')
	link(rel='stylesheet', type='text/css', href='../../../app-assets/vendors/css/extensions/sweetalert.css')


//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src='../../../app-assets/vendors/js/ui/prism.min.js', type='text/javascript')
	script(src='../../../app-assets/vendors/js/extensions/sweetalert.min.js', type='text/javascript')
	script(src='../../../app-assets/vendors/js/extensions/bootstrap-contextmenu.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src='../../../app-assets/js/scripts/extensions/context-menu.js', type='text/javascript')