extends template

block pageVars
	- var pageTitle    = "Dimple Step Chart"
	- var pageSubTitle = "Dimple step chart examples"
	- var description  = "The Step line chart type is similar to regular line chart, but it does not use the shortest distance to connect two data points. Instead, this chart type uses vertical and horizontal lines to connect the data points in a series forming a step-like progression."
	- var activeMenu   = "dimple-step-chart"

block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Dimple Charts"}, {name:"Step Chart"}])

//- Include page content in page block
append content
	include ../contents/dimple-step-chart.html

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src='../../../app-assets/vendors/js/charts/d3.min.js', type='text/javascript')
	script(src='../../../app-assets/vendors/js/charts/dimple.min.js', type='text/javascript')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src='../../../app-assets/js/scripts/charts/dimple/step.js', type='text/javascript')